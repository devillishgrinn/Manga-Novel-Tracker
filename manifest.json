{
  "manifest_version": 3,
  "name": "Manga/Novel Tracker",
  "version": "0.1.0",
  "permissions": ["storage"],
  "host_permissions": ["https://fenrirealm.com/*","https://www.fenrirealm.com/*", "https://helioscans.com/*"],
  "background": {
  "service_worker": "dist/background.js",
  "type": "module"
  },

  "content_scripts": [
  {
    "matches": [
      "https://fenrirealm.com/series/*",
      "https://www.fenrirealm.com/series/*", 
      "https://helioscans.com/*"
    ],
    "js": ["dist/contentScript.js"],
    "run_at": "document_idle"
  }
],

  "action": {
    "default_popup": "popup.html"
  }

}
